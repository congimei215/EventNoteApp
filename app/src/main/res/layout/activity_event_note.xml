<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.com.imeifoods.cong.eventnote.EventNoteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/TvDep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="廠別"
                android:textColor="#ff0000"
                android:textSize="@dimen/font_size" />

            <Spinner
                android:id="@+id/spnDept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/TvLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地點 / 樓層"
                android:textColor="#ff0000"
                android:textSize="@dimen/font_size" />

            <Spinner
                android:id="@+id/spnLoca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="類型"
                android:textColor="#ff0000"
                android:textSize="@dimen/font_size" />

            <Spinner
                android:id="@+id/spnType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_size" />


            <TextView
                android:id="@+id/tvAbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="異常說明"
                android:textColor="#ff0000"
                android:textSize="@dimen/font_size"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edtAbnormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/tvSug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="處置 / 建議"
                android:textColor="#ff0000"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/edtSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textSize="@dimen/font_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize = "@dimen/font_size"
                android:textColor="#ff0000"
                android:text="備註" />

            <EditText
                android:id="@+id/edtRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textSize="@dimen/font_size" />

            <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity= "center"
                android:horizontalSpacing= "1dp"
                android:numColumns= "4"
                android:verticalSpacing= "1dp"
                />

            <ImageView
                android:id= "@+id/imageView1"
                android:layout_width= "match_parent"
                android:layout_height= "wrap_content"
                android:gravity= "center"
                android:visibility= "gone"
                android:background= "#00000000"
                />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEventCancer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:text="@android:string/cancel"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:text="拍攝"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEventSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:text="@android:string/ok"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>